<h1> LOGIN </h1>
<br>
<center id='login-form'>
  <%= form_tag '/login', method: :post do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Submit" %>
  <% end %>
</center>
